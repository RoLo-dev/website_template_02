<script>
    let questionRow = document.querySelectorAll('.question-row')

    questionRow.forEach(question => {
        question.addEventListener('click', () => {
            const answerRow = question.nextElementSibling;
            const icon = question.querySelector('i');

            question.parentElement.classList.toggle('open');

            if (answerRow.style.maxHeight) {
                answerRow.style.maxHeight = null;
            } else {
                answerRow.style.maxHeight = answerRow.scrollHeight + "px";
            }

            icon.classList.toggle('open');
            // icon.classList.toggle('fa-plus');
            // icon.classList.toggle('fa-times');
        });
    });
</script>